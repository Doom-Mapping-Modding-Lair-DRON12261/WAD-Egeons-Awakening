//--------
// Magnum
//--------

// Counters
// 0 - Magazine

WeaponInfo Magnum : Weapon
{
	AmmoType AmmoClip
	AmmoUse 5
	AmmoType2 AmmoClip
	AmmoUse2 1
	
	SlotNumber 1
	
	States
	@"
	Ready:
		TNT1 A 0 A_WeaponCtrJumpEx("ReadyNotReload", greater, 0, 0)
		Goto AltFire
	ReadyNotReload:
		MAGH A 1 A_WeaponReady()
		Loop
	Select:
		MAGH A 1 A_Raise
		Loop
	Deselect:
		MAGH A 1 A_Lower
		Loop
		
	Flash:
		TNT1 A 1 A_Light1
		TNT1 A 2 A_Light2
		TNT1 A 0 A_Light0
		Stop
		
	Fire:
		TNT1 A 0 A_WeaponCtrJumpEx("FireNotReload", greater, 0, 0)
		Goto AltFire
	FireNotReload:
		MAGH A 2
		MAGH BC 1
		TNT1 A 0 A_FireCustomBullets("Weapons/MagnumFire", always, 70, 1, Flash)
		TNT1 A 0 A_WeaponSetCtr(0, 1, sub)
		TNT1 A 0 A_GunFlash
		MAGF A 1 BRIGHT
		MAGF B 1 BRIGHT
		MAGF C 1
		MAGF C 1
		MAGF C 6
		MAGF D 1 
		MAGF E 1 
		MAGF F 1 
		MAGP A 1 
		TNT1 A 0 A_PlaySoundEx("Weapons/MagnumCock", 8)
		MAGP B 1 
		MAGP C 1 
		MAGP C 1 
		MAGP D 1 
		MAGP D 1 
		MAGP D 1
		MAGP E 5 
		MAGP F 2 
		MAGH A 2
		MAGH A 1 A_ReFire
		Goto Ready
	
	AltFire:
		MAGH A 1
		TNT1 A 0 A_WeaponCtrJumpEx("Ready", equal, 6, 0)
		TNT1 A 0 A_JumpIfNoAmmo("Ready")
		Goto Reload
	Reload:
		TNT1 A 0 A_WeaponCtrJumpEx("Ready", equal, 6, 0)
		TNT1 A 0 A_JumpIfNoAmmo("Ready")
		MGR1 AB 3
		MGR1 C 3 A_PlaySoundEx("Weapons/MagnumOpen", CHAN_WEAPON)
		MGR1 DEFGIJK 2
		MGR1 L 2 A_PlaySoundEx("Weapons/MagnumShellsOut", CHAN_WEAPON)
		MGR1 M 6 
		MGR1 N 2
		MGR1 O 2 A_PlaySoundEx("Weapons/MagnumShellsIn", CHAN_WEAPON)
		MGR1 P 2
		MGR1 Q 10
		MGR1 R 2
		MGR1 T 1 A_PlaySoundEx("Weapons/MagnumClose", CHAN_WEAPON)
		MGR1 U 1
		MGR1 V 1
		MGR1 W 1
		MGR1 X 10
		MGR1 Y 1
		MGR1 Z 1
		TNT1 A 0 A_WeaponSetCtr(0, 6, assign)
		MGR2 A 2
		MGR2 B 2
		Goto Ready
	"@
}